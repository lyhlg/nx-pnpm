{
  "name": "pnpm-turbo-semantic-release",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "semantic-release": "pnpm -r --workspace-concurrency=1 exec -- npx --no-install semantic-release -e semantic-release-monorepo"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lyhlg/pnpm-semantic-release.git"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.1",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "prettier": "^3.2.5",
    "semantic-release": "^23.1.1",
    "semantic-release-monorepo": "^8.0.2",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
